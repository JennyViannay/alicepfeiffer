{% extends 'base.html.twig' %}

{% block title %}- Posts{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <nav>
            <span class="btn filters-btn"><a href="{{path('app_posts')}}">Tous les posts</a></span>
            {% for tag in tags %}
            <span class="btn filters-btn"><a href="{{ path('app_posts', {'tag' : tag.title }) }}"
                    class="color-framboise">{{tag.title}}</a></span>
            {% endfor %}
        </nav>
    </div>
    <div class="row">
        {% if posts is not empty %}
        {% for post in posts|reverse %}
        {% if post.isVisible %}
        <div class="col-lg-4 col-md-6 col-sm-12 d-flex">
            <div class="my-4">
                <a href="{{path('app_post', {'slug' : post.slug })}}">
                    {% if post.imageLink %}
                    <img src="{{post.imageLink}}" class="card-img-top" alt="{{post.imageAlt}}">
                    {% endif %}
                </a>
                <div class="card-body post-pres">
                    <div class="bg-white">
                        <div class="row">
                            {% for tag in post.tags|slice(0, 2) %}
                            <div class="col-auto">
                                <p class="card-title title-tag">{{tag.title}}</p>
                            </div>
                            {% endfor %}
                        </div>
                        <a href="{{path('app_post', {'slug' : post.slug })}}">
                            <h2 class="card-title mb-4">{{post.title}}</h2>
                        </a>
                        <div>
                            <small class="footer-section-article pt-2 small-text">
                                {{post.createdAt|date("d M Y")}}
                                - <i class="far fa-clock"></i> {{post.readingTime}}'
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
        {% endfor %}
        {% else %}
        No result found
        {% endif %}
    </div>
</div>
{% endblock %}
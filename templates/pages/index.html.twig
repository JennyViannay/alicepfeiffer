{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid mt-5">
    {% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endfor %}
</div>
<div class="container">
    <div class="embed-responsive embed-responsive-16by9 text-center">
        <iframe width="85%" height="550" src="https://www.youtube.com/embed/sNlWakWKWb4" frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"></iframe>
    </div>
</div>
<div class="container-fluid mt-5">
    <main role="main" class="inner cover text-center">
        <div class="row">
            <div class="col-lg-3 col-md-5 col-sm-12">
                <div class="bio-col">
                    {% if bio.image %}
                    <img src="{{ vich_uploader_asset(bio, 'imageFile') }}" class="img-fluid" alt="{{bio.imageAlt}}">
                    {% else %}
                    <img src="{{bio.imageLink}}" alt="Alice Pfeiffer portrait" class="img-fluid">
                    {% endif %}
                    <h4 class="cover-heading">Bio</h4>
                    <p class="lead">{{bio|raw}}</p>
                    <p class="lead my-4">
                        <a href="#" class="btn btn-lg btn-secondary">Learn more</a>
                    </p>
                </div>
            </div>
            <div class="col-lg-7 col-md-7 col-sm-12">
                <div class="row">
                    {% for post in posts %}
                    <div class="col-lg-6">

                        <div class="card">
                            <img class="card-img-top"
                                src="https://i.postimg.cc/nVdHhGs1/clem-onojeghuo-Hp-EDSZuk-Jqk-unsplash.jpg"
                                alt="Card image cap">
                            <div class="card-body">
                                <h4 class="card-title"></h4>
                                <h3 class="card-text">{{post.title}}</h3>
                                <p>Alice P. </p>
                                <a href="#" class="btn btn-primary">Go somewhere</a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
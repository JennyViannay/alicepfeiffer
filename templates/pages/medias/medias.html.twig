{% extends 'base.html.twig' %}

{% block title %}- Medias{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>MÃ©dias & Press</h1>
    <p class="line-black"></p>
    <h4>Ils parlent d'Alice</h4>
    <div class="row mt-4">
        <div class="col-lg-6 col-md-10 col-sm-12">
            <div class="sticky-col">
                <div class="row">
                    {% for media in medias %}
                    {% if media.isVisible %}
                    {% if media.embedVideo %}
                    <div class="col-12">
                        <iframe width="100%" height="315" src="{{media.embedVideo}}" frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen>
                        </iframe>
                        <h2>{{media.title}}</h2>
                        <div class="text-center mb-5">
                            <div class="fb-share-button" data-href="https://developers.facebook.com/docs/plugins/"
                                data-layout="button_count" data-size="small">
                                <a target="_blank"
                                    href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse"
                                    class="fb-xfbml-parse-ignore">
                                    Partager
                                </a>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                    {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-12 col-sm-12 mx-auto">
            <div class="row">
                {% for media in medias %}
                {% if media.isVisible %}
                {% if media.embedVideo is null %}
                <div class="col-12">
                    <div class="m-lg-5 m-md-0 mb-5">
                        <a href="{{media.link}}" target="_blank">
                            <img src="{{media.imageLink}}" class="card-img-top" alt="{{media.imageAlt}}">
                            <h3 class="card-text">{{media.title}}</h3>
                        </a>
                    </div>
                </div>
                {% endif %}
                {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}